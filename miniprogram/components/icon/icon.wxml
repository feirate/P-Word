<!-- 通用图标组件 -->
<view class="icon-container {{class}}" style="width: {{size}}rpx; height: {{size}}rpx; {{customStyle}}" bindtap="onIconTap">
  <image 
    wx:if="{{svgData}}"
    class="icon-image" 
    src="{{svgData}}"
    mode="aspectFit"
  />
  <!-- 降级显示 -->
  <text wx:else class="icon-text">{{name}}</text>
</view> 