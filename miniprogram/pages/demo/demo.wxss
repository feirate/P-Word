/* Demo页面样式 */
.demo-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 头部样式 */
.demo-header {
  text-align: center;
  padding: 40rpx 0;
  color: white;
}

.demo-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.demo-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* Tab导航样式 */
.demo-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 25rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 10rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab-icon {
  font-size: 36rpx;
  display: block;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.tab-item:not(.active) .tab-name {
  color: rgba(255, 255, 255, 0.8);
}

/* 内容区域样式 */
.tab-content {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 录音控制样式 */
.record-controls {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.record-btn, .stop-btn, .play-btn {
  padding: 25rpx 40rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.record-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
}

.record-btn.recording {
  background: linear-gradient(45deg, #feca57, #ff9ff3);
  animation: pulse 1.5s infinite;
}

.stop-btn {
  background: linear-gradient(45deg, #74b9ff, #0984e3);
  color: white;
}

.play-btn {
  background: linear-gradient(45deg, #55a3ff, #003d82);
  color: white;
}

.record-btn:disabled, .stop-btn:disabled, .play-btn:disabled {
  opacity: 0.5;
  transform: none;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 录音状态样式 */
.record-status {
  display: flex;
  justify-content: space-around;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.status-item {
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.quality-excellent { color: #00b894; }
.quality-good { color: #fdcb6e; }
.quality-poor { color: #e17055; }

/* 波形显示样式 */
.waveform-container {
  margin-bottom: 40rpx;
}

.waveform-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.waveform-display {
  height: 100rpx;
  background: #f1f2f6;
  border-radius: 15rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 10rpx;
  overflow: hidden;
}

.wave-bar {
  width: 6rpx;
  background: linear-gradient(to top, #667eea, #764ba2);
  margin: 0 2rpx;
  border-radius: 3rpx;
  min-height: 4rpx;
  transition: height 0.1s ease;
}

/* 测试结果样式 */
.test-results {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.result-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-label {
  font-size: 26rpx;
  color: #333;
}

.result-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.result-status.success {
  background: #d1f2eb;
  color: #00b894;
}

.result-status.pending {
  background: #fef9e7;
  color: #fdcb6e;
}

/* 推荐测试样式 */
.recommendation-tests {
  margin-bottom: 40rpx;
}

.test-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.test-btn {
  padding: 25rpx 35rpx;
  border-radius: 25rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.test-btn.smart {
  background: linear-gradient(45deg, #a29bfe, #6c5ce7);
}

.test-btn.random {
  background: linear-gradient(45deg, #fd79a8, #e84393);
}

/* 分类筛选样式 */
.category-filters {
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.category-scroll {
  white-space: nowrap;
}

.category-tag {
  display: inline-block;
  padding: 15rpx 25rpx;
  margin-right: 15rpx;
  background: #f1f2f6;
  color: #333;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.category-tag.active {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
}

/* 句子卡片样式 */
.sentence-display {
  margin-bottom: 40rpx;
}

.sentence-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 40rpx;
  border-radius: 25rpx;
  text-align: center;
}

.sentence-content {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.sentence-translation {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 25rpx;
}

.sentence-meta {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  font-size: 22rpx;
}

.level, .category, .difficulty {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 统计卡片样式 */
.stats-cards {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 同步状态样式 */
.sync-status {
  margin-bottom: 30rpx;
}

.status-card {
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
}

.status-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.queue-info {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 同步测试按钮 */
.sync-tests {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.sync-btn {
  padding: 25rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
}

.sync-btn.online {
  background: linear-gradient(45deg, #00b894, #00cec9);
}

.sync-btn.offline {
  background: linear-gradient(45deg, #fdcb6e, #e17055);
}

.sync-btn.manual {
  background: linear-gradient(45deg, #a29bfe, #6c5ce7);
}

/* 同步结果样式 */
.sync-results {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
}

.results-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-row:last-child {
  border-bottom: none;
}

.test-name {
  font-size: 26rpx;
  color: #333;
}

.test-status {
  font-size: 32rpx;
}

.test-time {
  font-size: 22rpx;
  color: #666;
}

/* 性能监控样式 */
.performance-monitor {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.monitor-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.monitor-metrics {
  display: flex;
  justify-content: space-around;
}

.metric-item {
  text-align: center;
}

.metric-label {
  font-size: 22rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.metric-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 练习历史样式 */
.practice-history {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: white;
  border-radius: 15rpx;
}

.history-content {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.history-meta {
  display: flex;
  gap: 15rpx;
  font-size: 22rpx;
}

.history-quality {
  color: #00b894;
  font-weight: 500;
}

.history-duration {
  color: #666;
}

/* 调试面板样式 */
.debug-panel {
  background: rgba(0, 0, 0, 0.9);
  border-radius: 25rpx 25rpx 0 0;
  margin-top: 30rpx;
  max-height: 400rpx;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.debug-panel:not(.open) {
  max-height: 80rpx;
}

.debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  color: white;
}

.debug-title {
  font-size: 26rpx;
  font-weight: 500;
}

.debug-toggle {
  font-size: 24rpx;
}

.debug-content {
  padding: 0 30rpx 30rpx;
}

.logs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.logs-title {
  color: white;
  font-size: 24rpx;
}

.clear-btn {
  padding: 8rpx 16rpx;
  background: #e17055;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.logs-container {
  height: 200rpx;
  background: #2d3436;
  border-radius: 10rpx;
  padding: 15rpx;
}

.log-item {
  font-size: 20rpx;
  color: #ddd;
  line-height: 1.4;
  margin-bottom: 8rpx;
  font-family: monospace;
}

/* 底部控制栏 */
.demo-footer {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.control-btn {
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

.control-btn:nth-child(1) {
  background: linear-gradient(45deg, #636e72, #2d3436);
}

.control-btn.export {
  background: linear-gradient(45deg, #00b894, #00cec9);
}

.control-btn.clear {
  background: linear-gradient(45deg, #e17055, #d63031);
}

/* 图标测试样式 */
.test-container {
  padding: 40rpx;
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.test-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.test-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 24rpx;
}

.icon-test-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.icon-test-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  width: 200rpx;
  transition: all 0.3s ease;
}

.icon-test-item:hover {
  border-color: #2196F3;
  background: #f8fcff;
}

.icon-test-item text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.dynamic-test {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 32rpx;
}

.color-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
  justify-content: center;
}

.color-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  color: white;
  font-size: 24rpx;
  border: none;
  min-width: 100rpx;
}

.dynamic-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
} 