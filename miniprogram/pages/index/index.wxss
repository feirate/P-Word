/**index.wxss**/

/* 页面容器 */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 24rpx;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.date-info {
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 4rpx;
}

.practice-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 云同步状态 */
.sync-status {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  margin-right: 12rpx;
}

.sync-status:active {
  transform: scale(0.95);
}

.sync-icon {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.sync-queue {
  background: #ff4757;
  color: white;
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
}

/* 同步指示器 */
.sync-indicator {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
  animation: slideDown 0.3s ease;
}

.indicator-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.indicator-text {
  font-size: 24rpx;
}

.settings-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.settings-btn .icon {
  font-size: 24rpx;
}

/* 句子显示区域 */
.sentence-area {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.sentence-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.sentence-level {
  background: linear-gradient(45deg, #4A90E2, #6BA7F0);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.sentence-count {
  color: var(--text-secondary);
  font-size: 28rpx;
}

.recommendation-mode {
  padding: 8rpx 12rpx;
  background: rgba(74, 144, 226, 0.1);
  border-radius: 16rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.recommendation-mode:active {
  background: rgba(74, 144, 226, 0.2);
  transform: scale(0.95);
}

.mode-icon {
  font-size: 24rpx;
}

.sentence-content {
  margin-bottom: 24rpx;
}

.sentence-text {
  font-size: 36rpx;
  line-height: 1.6;
  color: var(--text-color);
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 句子标签 */
.sentence-tags {
  display: flex;
  gap: 8rpx;
  margin-top: 16rpx;
  flex-wrap: wrap;
}

.category-tag {
  background: linear-gradient(45deg, #4A90E2, #6BA7F0);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.difficulty-tag {
  background: rgba(255, 193, 7, 0.9);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 分类筛选 */
.category-filter {
  margin: 16rpx 0;
}

.category-scroll {
  white-space: nowrap;
}

.category-item {
  display: inline-block;
  padding: 8rpx 16rpx;
  margin-right: 12rpx;
  background: rgba(74, 144, 226, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--text-color);
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-item.active {
  background: linear-gradient(45deg, #4A90E2, #6BA7F0);
  color: white;
  font-weight: 500;
}

.category-item:active {
  transform: scale(0.95);
}

.translation {
  padding: 16rpx 20rpx;
  background: rgba(74, 144, 226, 0.05);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
  margin-bottom: 16rpx;
}

.translation-text {
  font-size: 28rpx;
  line-height: 1.5;
}

.expand-btn {
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  cursor: pointer;
}

/* 波形可视化区域 */
.wave-container {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
}

.wave-canvas {
  width: 100%;
  border-radius: 8rpx;
  background: rgba(74, 144, 226, 0.05);
}

.record-time {
  position: absolute;
  top: 12rpx;
  right: 16rpx;
  background: rgba(74, 144, 226, 0.9);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 录音控制区域 */
.record-controls {
  margin-bottom: 32rpx;
}

.record-button-container {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.record-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-btn.recording {
  background: linear-gradient(135deg, #ee5a24, #ff6b6b);
  animation: pulse 1.5s ease-in-out infinite;
  transform: scale(1.05);
}

.record-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.record-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.record-btn:active::after {
  opacity: 1;
}

.record-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.recording-icon {
  animation: blink 1s ease-in-out infinite;
}

.record-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 12rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-btn:not([disabled]):active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.action-btn[disabled] {
  opacity: 0.5;
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

/* 练习统计 */
.practice-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stats-divider {
  width: 2rpx;
  height: 40rpx;
  background: var(--border-color);
  margin: 0 16rpx;
  align-self: center;
}

/* 权限申请弹框 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
}

.auth-content {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin: 0 48rpx;
  text-align: center;
  min-width: 560rpx;
  animation: scaleIn 0.3s ease-out;
}

.auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: block;
}

.auth-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 32rpx;
  display: block;
}

.auth-buttons {
  display: flex;
  gap: 16rpx;
}

.auth-buttons .btn {
  flex: 1;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 动画效果 */
@keyframes pulse {
  0%, 100% {
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  }
  50% {
    box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.5);
  }
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 录音质量显示 */
.audio-quality {
  margin-top: 16rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 16rpx;
  backdrop-filter: blur(10rpx);
}

.quality-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.quality-score {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--primary-color);
}

.quality-toggle {
  font-size: 24rpx;
  color: var(--text-secondary);
  transition: transform 0.3s ease;
}

.quality-details {
  margin-top: 16rpx;
  animation: fadeIn 0.3s ease;
}

.quality-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  gap: 16rpx;
}

.quality-item:last-child {
  margin-bottom: 0;
}

.quality-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  white-space: nowrap;
  min-width: 120rpx;
}

.quality-bar {
  flex: 1;
  height: 8rpx;
  background: rgba(74, 144, 226, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.quality-bar.warning {
  background: rgba(245, 34, 45, 0.2);
}

.quality-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2, #67C23A);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.quality-bar.warning .quality-fill {
  background: linear-gradient(90deg, #F5222D, #FA8C16);
}

.quality-value {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
  min-width: 60rpx;
  text-align: right;
}

/* 高质量录音提示 */
.quality-excellent {
  background: linear-gradient(135deg, rgba(103, 194, 58, 0.1), rgba(74, 144, 226, 0.1));
  border: 2rpx solid rgba(103, 194, 58, 0.3);
}

.quality-good {
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1), rgba(135, 208, 104, 0.1));
  border: 2rpx solid rgba(74, 144, 226, 0.3);
}

.quality-poor {
  background: linear-gradient(135deg, rgba(245, 34, 45, 0.1), rgba(250, 140, 22, 0.1));
  border: 2rpx solid rgba(245, 34, 45, 0.3);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .sentence-text {
    font-size: 32rpx;
  }
  
  .record-btn {
    width: 140rpx;
    height: 140rpx;
  }
  
  .record-icon {
    font-size: 40rpx;
  }
  
  .quality-label {
    min-width: 100rpx;
    font-size: 22rpx;
  }
  
  .quality-value {
    min-width: 50rpx;
    font-size: 22rpx;
  }
} 