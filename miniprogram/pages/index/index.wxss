/**index.wxss**/

/* 页面容器 */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 24rpx;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.date-info {
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 4rpx;
}

.practice-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.settings-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.settings-btn .icon {
  font-size: 24rpx;
}

/* 句子显示区域 */
.sentence-area {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.sentence-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.sentence-level {
  background: linear-gradient(45deg, #4A90E2, #6BA7F0);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.sentence-count {
  color: var(--text-secondary);
  font-size: 28rpx;
}

.sentence-content {
  margin-bottom: 24rpx;
}

.sentence-text {
  font-size: 36rpx;
  line-height: 1.6;
  color: var(--text-color);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.translation {
  padding: 16rpx 20rpx;
  background: rgba(74, 144, 226, 0.05);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
  margin-bottom: 16rpx;
}

.translation-text {
  font-size: 28rpx;
  line-height: 1.5;
}

.expand-btn {
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  cursor: pointer;
}

/* 波形可视化区域 */
.wave-container {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
}

.wave-canvas {
  width: 100%;
  border-radius: 8rpx;
  background: rgba(74, 144, 226, 0.05);
}

.record-time {
  position: absolute;
  top: 12rpx;
  right: 16rpx;
  background: rgba(74, 144, 226, 0.9);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 录音控制区域 */
.record-controls {
  margin-bottom: 32rpx;
}

.record-button-container {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.record-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-btn.recording {
  background: linear-gradient(135deg, #ee5a24, #ff6b6b);
  animation: pulse 1.5s ease-in-out infinite;
  transform: scale(1.05);
}

.record-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.record-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.record-btn:active::after {
  opacity: 1;
}

.record-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.recording-icon {
  animation: blink 1s ease-in-out infinite;
}

.record-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 12rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-btn:not([disabled]):active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.action-btn[disabled] {
  opacity: 0.5;
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

/* 练习统计 */
.practice-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stats-divider {
  width: 2rpx;
  height: 40rpx;
  background: var(--border-color);
  margin: 0 16rpx;
  align-self: center;
}

/* 权限申请弹框 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
}

.auth-content {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin: 0 48rpx;
  text-align: center;
  min-width: 560rpx;
  animation: scaleIn 0.3s ease-out;
}

.auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: block;
}

.auth-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 32rpx;
  display: block;
}

.auth-buttons {
  display: flex;
  gap: 16rpx;
}

.auth-buttons .btn {
  flex: 1;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 动画效果 */
@keyframes pulse {
  0%, 100% {
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  }
  50% {
    box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.5);
  }
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .sentence-text {
    font-size: 32rpx;
  }
  
  .record-btn {
    width: 140rpx;
    height: 140rpx;
  }
  
  .record-icon {
    font-size: 40rpx;
  }
} 