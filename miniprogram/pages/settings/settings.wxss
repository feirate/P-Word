/* pages/settings/settings.wxss */
.container {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 设置区域 */
.settings-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(33, 150, 243, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f9f9f9;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item.action-item:active {
  background-color: #f5f5f5;
}

.setting-info {
  flex: 1;
}

.setting-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.setting-desc {
  display: block;
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
}

/* 开关样式 */
.setting-switch {
  transform: scale(1.2);
}

/* 选择器样式 */
.speed-selector,
.volume-selector,
.goal-selector,
.mode-selector {
  background: #f0f0f0;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  min-width: 80rpx;
  text-align: center;
}

.speed-label,
.volume-label,
.goal-label,
.mode-label {
  font-size: 28rpx;
  color: #1976D2;
  font-weight: 500;
}

/* 操作图标 */
.action-icon {
  font-size: 40rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.action-item:active .action-icon {
  transform: scale(1.1);
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 32rpx 24rpx;
  }
  
  .setting-item {
    padding: 24rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
} 